<li {{bind-attr class="story.focused"}}>
<a {{action 'toggleFocus' story}}>{{story.title}}</a>
{{#if story.focused}}
  <div class='container-fluid'>
    <div class='row story-summary-info'>
      <div class='col-md-6'>{{story.author}} -- {{story.human_time}}</div>
      <div class='col-md-1'>{{story.score}}</div>
    </div>
    <div class='row story-summary'>
      <div class='col-md-12'>{{render 'story' story}}</div>
    </div>
  </div>
{{/if}}
</li>
