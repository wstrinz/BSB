<div class='container-fluid'>
  {{partial 'stories/_story-header'}}
  {{partial 'stories/_story-controls'}}
  <div class='row'>
    <div class='col-md-12'>
      {{#if showInIframe}}
        {{#if sandboxIframe}}
        <iframe sandbox {{bind-attr src=url}}></iframe>
        {{else}}
        <iframe seamless {{bind-attr src=url}}></iframe>
        {{/if}}
      {{else}}
        {{#if story_content}}
          {{{story_content}}}
        {{else}}
          {{{summary}}}
        {{/if}}
      {{/if}}
    </div>
  </div>
  {{#if showInIframe}}
  {{partial 'stories/_story-controls'}}
  {{/if}}
</div>
