<div class='container-fluid'>
  {{partial 'stories/_story-header'}}
  {{partial 'stories/_story-controls'}}
  <div class='row'>
    <div class='col-md-1'>
      <button class='story-length' {{action 'prevStory'}}>◀</button>
    </div>
    <div class='col-md-10'>
      {{#if showInIframe}}
        {{#if sandboxIframe}}
        <iframe sandbox {{bind-attr src=url}}></iframe>
        {{else}}
        <iframe seamless {{bind-attr src=url}}></iframe>
        {{/if}}
      {{else}}
        {{#if story_content}}
          {{{story_content}}}
        {{else}}
          {{{summary}}}
        {{/if}}
      {{/if}}
    </div>
    <div class='col-md-1'>
      <button class='story-length' {{action 'nextStory'}}>▶</button>
    </div>
  </div>
  {{partial 'stories/_story-controls'}}
</div>
