<h3>
  <a target="_blank" {{bind-attr href="url"}}>
    {{title}}
  </a>
</h3>
<p>
  {{#link-to 'feeds.stories' feed.id}}
    {{feed.name}}
  {{/link-to}}
</p>
<p>{{author}}</p>
<p>{{timestamp}}</p>
{{partial 'stories/_story-controls'}}
<p>
{{#if showInIframe}}
  <iframe {{bind-attr src=url}}></iframe>
{{else}}
  {{#if story_content}}
  {{{story_content}}}
  {{else}}
  {{{summary}}}
  {{/if}}
{{/if}}
</p>
{{partial 'stories/_story-controls'}}
