<div {{bind-attr class=":story-container :row story.read:read:unread"}}>
  <div class="story-controls">
    {{#if controllers.application.unreadButtonsInIndex}}
      <button class='btn btn-default' {{action 'toggleRead' story.id}}>
        {{#if story.read}}●{{else}}○{{/if}}
      </button>
    {{/if}}
  </div>
  <div class="story" {{action 'toggleFocus' story}}>
    <li {{bind-attr class="story.focused"}}>
      <div class='story-title'>
        <a {{bind-attr href="story.url" class="story.focused::no-show-link"}} {{action 'openIfFocused' story}}>{{story.title}}</a>
      </div>
      <div class="story-info">
        <img class="favicon" {{bind-attr src=story.faviconUrl}} alt="favicon">
        {{#link-to 'stories' story.feed.id classNames="no-show-link"}}
        {{story.feed.name}}
        {{/link-to}}
      </div>
      {{#if story.focused}}
        <div class='container-fluid'>
          <div class='row story-summary-info'>
            {{partial 'stories/story-header'}}
          </div>
          <div class='row story-summary'>
            {{partial 'stories/story-details'}}
          </div>
        </div>
      {{/if}}
    </li>
  </div>
</div>
